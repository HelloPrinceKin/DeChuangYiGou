<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homepager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/select_homepager"
            android:gravity="center_horizontal"
            android:text="首页"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/product"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/selector_product"
            android:gravity="center_horizontal"
            android:text="@string/product"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/shopping_car"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/selector_shoppingcar"
            android:gravity="center_horizontal"
            android:text="@string/shopping_car"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/order_form"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/selector_order"
            android:gravity="center_horizontal"
            android:text="@string/order_form"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/selector_me"
            android:gravity="center_horizontal"
            android:text="@string/me"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>